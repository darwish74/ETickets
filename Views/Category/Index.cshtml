@model Category
@{
    ViewData["Title"] = "Index";
}
<h1>@Model.Name</h1>
<div class="container my-4">
    <div class="row">
        @foreach (var item in Model.Movies)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width:10%, height:20%">
                <h5 class="card-title">@item.Name</h5>
                <img src="~/Images/movies/@item.Image" class="card-img-top" alt="Venom Poster" >
                <div class="card-body">
                    <p class="card-text"><strong>Price:</strong> @item.Price</p>
                    <p class="card-text"><strong>Cinema:</strong> @item.cinema.Name</p>
                    <p class="card-text"><strong>Start Date:</strong> @item.StartDate</p>
                    <p class="card-text"><strong>End Date:</strong> @item.EndDate</p>
                    <p class="card-text"><strong>Category:</strong> @item.category.Name</p>
                    <span class="badge bg-primary">@((MovieStatus)item.MovieStatus)</span>
                    <div class="mt-3 d-flex justify-content-between">
                            <a href="/Home/Details/@item.Id" class="btn btn-outline-primary">More Details</a>
                        <a href="#" class="btn btn-success">Book Ticket</a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>
