@model ICollection<Category>
@{
    ViewData["Title"] = "All Categories";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">All Categories</h1>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Category Name</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-center">
                            <a href="/Category/Index/@item.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-film"></i> View Movies
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">No categories found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
