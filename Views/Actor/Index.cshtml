@model Actor
@{
    ViewData["Title"] = "Actor Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <!-- Profile Header -->
                <div class="card-header text-center bg-primary text-white">
                    <img src="~/Images/cast/@Model.profilePicture"
                         alt="@Model.FirstName @Model.LastName's Profile Picture"
                         class="rounded-circle img-fluid"
                         style="width: 150px; height: 150px; object-fit: cover; border: 5px solid white;">
                    <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
                </div>

                <!-- Profile Details -->
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p class="text-muted">Bio: @Model.Bio</p>
                    }
                    else
                    {
                        <p class="text-muted">Bio: <em>No bio available</em></p>
                    }

                    <!-- Social Media Links -->
                    <div class="mt-3">
                        <h5>Follow Me</h5>
                        <a href="#" class="btn btn-primary btn-sm mx-1" target="_blank" title="Facebook">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a href="#" class="btn btn-info btn-sm mx-1" target="_blank" title="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-danger btn-sm mx-1" target="_blank" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-secondary btn-sm mx-1" target="_blank" title="LinkedIn">
                            <i class="fab fa-linkedin"></i>
                        </a>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer text-center">
                    <a href="/Actors/Edit/@Model.Id" class="btn btn-warning btn-sm">Edit Profile</a>
                    <a href="/Actors" class="btn btn-secondary btn-sm">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
